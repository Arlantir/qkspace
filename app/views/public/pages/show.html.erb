<%= content_for(:title) { @page.title } %>

<div class="page-content">
  <%= @page.html.html_safe %>
</div>

<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

<% if @project.google_analytics_tracker_id.present? %>
  <% content_for :head do %>
    <%= render 'google_analytics_tracker',
      tracker_id: @project.google_analytics_tracker_id %>
  <% end %>
<% end %>

<div class="page-content mt-4">
  <h3><%= t('comments.title') %>:</h3>
  <%= render partial: "private/comments/comment", collection: @page.comments.where(parent_id: nil) %>
</div>

<% content_for :head do %>
 <%= render 'seo_tags' %>
<% end %>
