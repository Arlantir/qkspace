<% content_for :title do %>
  <%= @project.title %>
<% end %>

<h1 class="h3">
  <%= @page.title %>
  <% if current_user_owns?(@project) %>
    <%= link_to fa_icon('pencil'), edit_page_path(@page), class: 'small' %>
  <% end %>
</h1>

<% @page.blocks.each do |block| %>
  <div class="block">
    <div class="block-body">
      <%= block.html.html_safe %>
    </div>
    <% if current_user_owns?(@project) %>
      <div class="block-controls">
        <%= link_to fa_icon('pencil'), edit_page_block_path(@page, block) %>
      </div>
    <% end %>
  </div>
<% end %>

<% if current_user_owns?(@project) %>
  <%= link_to 'Новый блок', new_page_block_path(@page), class: 'button outline' %>
<% end %>

<% content_for :sidebar do %>
  <% @project.pages.each do |page| %>
    <% if page == @page %>
      <p class="muted"><%= page.title %></p>
    <% else %>
      <p><%= link_to page.title, page_path(page) %></p>
    <% end %>
  <% end %>

  <% if current_user_owns?(@project) %>
    <p><%= link_to fa_icon('plus'), new_page_path, title: 'Новая страница' %></p>
  <% end %>

  <% if user_signed_in? %>
    <p><%= current_user.email %> (<%= link_to "выйти", destroy_user_session_path, method: :delete %>)</p>
  <% else %>
    <p><%= link_to 'Регистрация', new_user_registration_path %> или <%= link_to 'вход', new_user_session_path %></p>
  <% end %>
<% end %>
