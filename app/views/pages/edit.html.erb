<% content_for :title do 'Редактирование страницы' end %>

<%= render 'form', page: @page %>

<% if @page.only_page? %>
  <%= fa_icon('trash-o', title: 'Нельзя удалить последнюю страницу', class: 'muted') %>
<% else %>
  <%= link_to fa_icon('trash-o'), page_path(@page), method: :delete, data: { confirm: 'Вы уверены?' } %>
<% end %>
