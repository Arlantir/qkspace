<%= simple_form_for([:private, @project, @page, Comment.new], remote: true,
                    html: { class: local_assigns[:class],
                            id: local_assigns[:id] }) do |f| %>
  <div class="form-group">
    <%= f.input :body, as: :text, label: false, placeholder: t('comments.add_comment'),
                input_html: { rows: 3 } %>
  </div>

  <div class="form-group mb-4">
    <%= f.hidden_field :parent_id, value: local_assigns[:parent_id] %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
