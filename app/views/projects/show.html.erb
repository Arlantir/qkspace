<p id="notice"><%= notice %></p>

<p>
  <%= @project.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= link_to 'Show', project_page_path(@project, page) %></td>
        <td><%= link_to 'Edit', edit_project_page_path(@project, page) %></td>
        <td><%= link_to 'Destroy', project_page_path(@project, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Page', new_project_page_path(@project) %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
